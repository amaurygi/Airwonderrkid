<h1>Properties of <%= @user.email %></h1>

<div class="page">
  <div class="cards">
    <% @user.properties.each do |p| %>
      <div class="card-product mt-2">
          <%= cl_image_tag p.photos.first&.key %>
          <div class="card-product-infos">
            <h6><%= p.name %></h6> 
            <p> At only <%= p.price %> â‚¬/week! </p>
            <p><%= ["Don't miss it!", 'Go wild!', 'What a bargain!', "You'll never forget it!"].sample %></p>
              <div class="buttons">
                <a class="btn-show"><%= link_to 'See details', property_path(p), class: 'btn btn-primary' %></a>
                <% if p.user != current_user %>
                <a class="btn-show"><%= link_to 'Book', new_property_booking_path(p), class: 'btn btn-primary' %></a>
              <% end %>
            </div>
        </div>
      </div>  
    <% end %>
    </div>
  </div>

<div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>