<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new property</h3>
        <%= simple_form_for @property do |f| %>
          <%= f.input :name, placeholder: 'Name of the property' %>
          <%= f.input :address, placeholder: 'Tell us the exact location :)' %>
          <%= f.input :description, placeholder: 'Describe how cozy the property is <3' %>
          <%= f.input :price, placeholder: 'Be cheap!' %>
          <% @property.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
