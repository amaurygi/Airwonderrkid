<h1> All Properties </h1>

<div class="page">
  <div class="cards">
      <% @properties.each do |property| %>
        <div class="card">
          <p>
            <%= link_to property.name, property_path(property), class: 'btn btn-flat' %>
              <% if property.user == current_user %>
                <div class="btn-show"><%= link_to 'Edit', edit_property_path(property), class: 'btn btn-primary' %></div>
              <% end %>
              <% if property.user == current_user %>
                <%= link_to "delete", property_path(property), method: :delete, class: 'btn btn-primary' %>
              <% end %>
          </p>
        </div>
      <% end %>
  </div>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
